extends ../layouts/base.pug

block content
  .login-container
    img(src="/Images/Natours-recent-logo.png" alt="")
    form.form
      .desc
        h2 Sign in
        p
          | Access your account to manage bookings.
          br
          | Adventure begins where comfort ends.

      .input-group
        label(for="email") Email
        input(type="email" name="email" placeholder="Your Email" autocomplete="off" id="email")

      .input-group
        label(for="password") Password
        input(type="password" name="password" minlength="8" autocomplete="new-password" id="password")

      .input-group
        button(type="submit") Sign In

      p
        | New to Natours?
        a(href="/sign-up") Sign Up

  // Load axios (works globally)
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  script(type="module" src="/js/login.js")
