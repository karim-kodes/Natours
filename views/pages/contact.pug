extends ../layouts/layout.pug

block content
    .contact-page
        .contact-hero 
            h1(data-aos="zoom-in" data-aos-delay="300") Contact Us 
            p(data-aos="zoom-in" data-aos-delay="300") 
                | Have a question or need help with your next adventure? We’re here to assist
                br
                | reach out and we’ll get back to you as soon as possible.
        .contacts-cards 
            .contact-card(data-aos="fade-up" data-aos-delay="300") 
                i.fa-regular.fa-envelope
                h3 Email Address 
                p natours@support.com
                p natours@customers.io
            .contact-card(data-aos="fade-up" data-aos-delay="300")  
                i.fa-solid.fa-phone
                h3 Phone Number 
                p +254 712 345 678
                p +254 787 654 321
            .contact-card(data-aos="fade-up" data-aos-delay="300")  
                i.fa-solid.fa-location-dot
                h3 Office Location 
                p Mku, Thika, KENYA
                p Mku, Nairobi, KENYA
            .contact-card(data-aos="fade-up" data-aos-delay="300") 
                i.fa-regular.fa-clock
                h3 Work Day  
                p Mon - Fri : 08:00 - 17:00
                p Sat - Sun : 08:00 - 12:00
        .contact-form-section 
            .contact-left 
                span Contact 
                h3 Get In Touch With Us
                p 
                    | Your next great journey starts with a single message.
                    br
                    | Let’s make your dream tour a reality.
                form.contact-form
                    input(type="text", name="name", placeholder="Name", required)
                    input(type="email", name="email", placeholder="Email", required)
                    input(type="text", name="phoneNumber", placeholder="Phone Number", required)
                    input(type="text", name="subject", placeholder="Subject", required)
                    textarea(name="Message", placeholder="Message", required)
                    button(type="submit") Send Message
            .contact-right 
                img(src="/images/contact-us.jpeg", alt="Contact form photo")
        .map-container 
            iframe(
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.1549589511305!2d37.079046575995754!3d-1.0448216989451256!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f4ef517d2dd15%3A0x8e7d07383daf5916!2sMount%20Kenya%20University!5e0!3m2!1sen!2ske!4v1729961111111!5m2!1sen!2ske",
            width="100%",
            height="400",
            style="border:0;",
            allowfullscreen,
            loading="lazy",
            referrerpolicy="no-referrer-when-downgrade"
            )




