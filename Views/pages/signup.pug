extends ../layouts/base.pug

block content
  .login-container
    img(src="/Images/Natours-recent-logo.png" alt="")
    form.form(action="" )
      .desc
        h2 Create Your Account
        p
          | Create your Natours account in seconds.
          br
          | Manage bookings, tours, and memories all in one place.

      .input-group
        label(for="email") Name
        input(type="text" name="name" placeholder="Your Name")

      .input-group
        label(for="email") Email
        input(type="email" name="name" placeholder="Your Email" autocomplete='off')

      .input-group
        label(for="password") Password
        input(type="password" name="name" minlength="8" autocomplete="new-password")

      .input-group
        label(for="password") Confirm Password
        input(type="password" name="password" minlength="8")

      .input-group
        button(type="submit")
          a(href="/sign-up") Sign Up

      p
        | Already have an account?
        a(href="/sign-in") Sign In
